{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "JINHAK API Key (jinhak_로 시작하는 32자 이상 키)",
            "pattern": "jinhak_[a-zA-Z0-9]{32,}"
          },
          {
            "name": "Korean SSN - 주민등록번호 (6자리-7자리)",
            "pattern": "\\d{6}-[1-4]\\d{6}"
          },
          {
            "name": "Korean Phone Number - 휴대전화번호",
            "pattern": "01[016789]-\\d{3,4}-\\d{4}"
          },
          {
            "name": "Generic API Key Assignment (api_key/apikey 변수에 직접 할당)",
            "pattern": "(api[_-]?key|apikey)\\s*[:=]\\s*['\"][A-Za-z0-9/+=]{16,}['\"]"
          },
          {
            "name": "Generic Secret Assignment (secret/password 변수에 직접 할당)",
            "pattern": "(secret|password|passwd|pwd)\\s*[:=]\\s*['\"][^'\"]{8,}['\"]"
          },
          {
            "name": "Bearer Token Hardcoded (Bearer 토큰 하드코딩)",
            "pattern": "Bearer\\s+[A-Za-z0-9._-]{20,}"
          },
          {
            "name": "Private Key Header (PEM 개인키 헤더)",
            "pattern": "-----BEGIN (RSA |EC )?PRIVATE KEY-----"
          },
          {
            "name": "Database Connection String (DB 접속 문자열)",
            "pattern": "(mysql|postgres|mongodb|mssql)://[^\\s'\"]{10,}"
          },
          {
            "name": "Korean Business Registration Number - 사업자등록번호",
            "pattern": "\\d{3}-\\d{2}-\\d{5}"
          },
          {
            "name": "JINHAK Exam Number - 수험번호 패턴 (숫자 10자리 이상 연속)",
            "pattern": "examNo\\s*[:=]\\s*['\"]\\d{10,}['\"]"
          }
        ]
      }
    }
  ],
  "allowRules": [
    {
      "allow": [
        "*.test.*",
        "*.spec.*",
        "**/__tests__/**",
        "**/fixtures/**",
        "**/*.md",
        "**/*.example",
        "**/*.sample",
        "**/package-lock.json",
        "**/yarn.lock"
      ]
    }
  ]
}
